{
  "name": "react-marketing-cloud-app",
 "version": "1.0.0",
  "description": "A Heroku app with React and Marketing Cloud integration",
  "main": "server/server.js",
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install --prefix client && npm run build --prefix client"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^6.2.1"
  },
  "engines": {
	"node": "20.x"
   }
}
